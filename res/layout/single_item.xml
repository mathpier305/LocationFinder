<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical" >



    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >
    </ListView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" >
        <TextView
            android:id="@+id/title_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            
            
            />
        <TextView
            
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/title_label"
        android:layout_alignBaseline="@+id/title_label"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"
       
        android:text="TextView" />
        
        <TextView
            android:id="@+id/address_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_label"
            android:text="Address: "
            />
          <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_toRightOf="@+id/address_label"
        android:layout_alignBaseline="@+id/address_label"
        android:text="TextView" />
          
          <TextView
            android:id="@+id/distance_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address_label"
            android:text="Total Review: "
            />
          <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/distance_label"
        android:layout_alignBaseline="@+id/distance_label"
        android:text="TextView" />
          
          <TextView
            android:id="@+id/totalreview_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/distance_label"
            android:text="Last Review: "
            />
            <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_toRightOf="@+id/totalreview_label"
        android:layout_alignBaseline="@+id/totalreview_label"
        android:text="TextView" />
            
            <TextView
            android:id="@+id/reviewdesc_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/totalreview_label"
            android:text="Address: "
            />
              <TextView
        android:id="@+id/textView5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_toRightOf="@+id/reviewdesc_label"
        android:layout_alignBaseline="@+id/reviewdesc_label"
        android:text="TextView" />

              
              </RelativeLayout>
        

</LinearLayout>
